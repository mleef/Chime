var channel;
var socket;

function channelChangeCB(channelInfo, type) {
	setTimeout(function() {
		var newChannel = tizen.tv.channel.getCurrentChannel();
		// Make sure the channel hasn't changed in the last 5 seconds.
		if (newChannel.channelName != channelInfo.channelName) {
			return;
		}
		chime = {
				registrationMessage : {
					previousChannel : {id : channel}, 
					newChannel : {id: channelInfo.channelName},
					television : {id : "2"},
				}
			};
		socket.send(JSON.stringify(chime));
		channel = channelInfo.channelName;
	}, 5000);
}

window.onload = function () {
    // TODO:: Do your initialization job

	console.log("Reached js");
	console.log("The current date/time is " + tizen.time.getCurrentDateTime().toString());
	var registration = {
		registrationMessage: {
			previousChannel: null,
			newChannel: {id: tizen.tv.channel.getCurrentChannel().channelName},
			television: {id: "3"}
		}
	};

	var chime = {
		chimeMessage : {
			channel : {id : "0"}, 
			television : {id : "3"},
			message : "Test message.",
			timeSent : "1000"
		}
	};
	
	if (navigator.onLine) {
		console.log("TV is online");
	} else {
		console.log("TV not online");
	}
	console.log(webapis.network.getMac());
	socket = new WebSocket('ws://ec2-54-152-59-214.compute-1.amazonaws.com:4445');
	socket.onopen = function () {
		console.log("connection opened.");
		socket.send(JSON.stringify(registration));
		socket.send(JSON.stringify(chime));
	}
	
	socket.onmessage = function (message) {
		console.log("response received");
		console.log(message);
	}
	
	var channelListenerID = tizen.tv.channel.addChannelChangeListener(channelChangeCB);

};
